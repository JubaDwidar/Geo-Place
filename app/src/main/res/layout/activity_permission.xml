<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.PermissionActivity">

    <ImageView
        android:id="@+id/perm_image"
        android:layout_width="300dp"
        android:layout_height="210dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="135dp"
        android:src="@drawable/ic_map"
        />

    <TextView
        android:id="@+id/perm_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25sp"
        android:layout_marginRight="15dp"
        android:gravity="center_horizontal"
        android:text="Please give a permission to that app to allow access to your current location or deny to prevent this app to use GPS"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/permission_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="150dp"
        android:layout_marginRight="20dp"
        android:text="Give Permission"
        android:textAllCaps="false"
        android:textSize="18sp" />

</LinearLayout>